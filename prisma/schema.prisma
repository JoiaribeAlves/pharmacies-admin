datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pharmacy {
  id        String   @id @default(cuid())
  name      String
  phones    String[]
  imageUrl  String?
  address   Address?
  duties    Duty[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id         String   @id @default(cuid())
  street     String
  number     String
  district   String
  complement String
  mapUrl     String
  pharmacy   Pharmacy @relation(fields: [pharmacyId], references: [id])
  pharmacyId String   @unique
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Duty {
  id         String   @id @default(cuid())
  startAt    DateTime
  endAt      DateTime
  pharmacy   Pharmacy @relation(fields: [pharmacyId], references: [id])
  pharmacyId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
